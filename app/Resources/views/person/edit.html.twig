{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person edit</h1>

    {{ form_start(edit_form) }}
    {{ form_row(edit_form.firstname) }}
    {{ form_row(edit_form.lastname) }}
    <div>
        {{ form_label(edit_form.imageFile.delete, 'Delete image') }}
        {{ form_widget(edit_form.imageFile.delete)}}
    </div>
        {{ form_rest(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('person_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
